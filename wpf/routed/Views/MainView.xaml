<rxui:ReactiveUserControl x:Class="routed.Views.MainView"
                          x:TypeArguments="vm:MainViewModel"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                          xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                          xmlns:rxui="http://reactiveui.net"
                          xmlns:vm="clr-namespace:routed.ViewModels"
                          mc:Ignorable="d" 
                          d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Red">
        <StackPanel Orientation="Vertical" Width="200">
            <TextBlock x:Name="countBox" />
            <Button x:Name="incrementBtn" Content="Increment" />
            <Button x:Name="decrementBtn" Content="Decrement" />
        </StackPanel>
    </Grid>
</rxui:ReactiveUserControl>
